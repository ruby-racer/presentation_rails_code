<section class="row login u-fullHeight--strict">
    <div class="columns small-9 small-centered u-verticalAlign--center">
        <%= sprite_tag('logo-icon', classes: 'login-logoIcon') %>
        <%= sprite_tag('logo', classes: 'login-logo') %>
        <div class="login-form">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>
                <div class="login-form-fields">
                    <%= f.email_field :email, autofocus: true, placeholder: t('.placeholders.email') %>
                </div>
                <%= f.submit(t('.submit'), class: 'btn--transparent') %>
                <%= render "devise/shared/links" %>
            <% end %>
        </div>
    </div>
</section>
