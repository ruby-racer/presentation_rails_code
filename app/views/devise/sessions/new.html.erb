<section class="row login u-fullHeight--strict">
    <div class="columns small-9 small-centered u-verticalAlign--center">
        <%= sprite_tag('logo-icon', classes: 'login-logoIcon') %>
        <%= sprite_tag('logo', classes: 'login-logo') %>
        <div class="login-form">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="login-form-fields">
                    <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: t('.placeholders.email') %>
                    <%= f.password_field :password, autocomplete: "off", placeholder: t('.placeholders.password') %>
                </div>
                <%= f.submit t('.sign_in'), class: 'btn--transparent' %>
                <%# link_to('Sign in with Facebook', omniauth_authorize_path(resource_name, :facebook), class: 'btn--transparent login-form-loginFb') %>
            <% end %>
            <%# render "devise/shared/links" %>
        </div>
    </div>
</section>
